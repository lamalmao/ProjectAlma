extends layout.pug
block content
	.form( action="/signup" method="post")
		h1= 'Регистрация'
		.input-form
			select.input-form#role(onmouseup='change()')
				option= 'Студент'
				option= 'Преподаватель'
				option= 'Сотрудник'
		.input-form
			input#fullname(type='text' placeholder='ФИО')
		.input-form
			input#group(type='text' placeholder='Группа')
		.input-form
			input#signId(type='text' placeholder='Номер зачетки')
		.input-form
			input#email(type='email' placeholder='Почта')
		.input-form
			input#login111(type='text' placeholder='Логин')
		.input-form
			input#password(type='password' placeholder='Пароль')
		.input-form
			input#submit(type='submit' value='Зарегистироваться', onclick='signup();')